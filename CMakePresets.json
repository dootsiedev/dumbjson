{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "description": "Default build",
            "hidden": true,
            "binaryDir": "${sourceDir}/../${sourceDirName}_${presetName}/build",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../${sourceDirName}_${presetName}/install",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "linux_default",
            "description": "Default build for linux",
            "inherits": "default",
            "generator": "Unix Makefiles",
            "hidden": true,
            "cacheVariables": {
                "USE_OLD_SDL2": true
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Linux"
                    ]
                }
            }
        },
        {
            "name": "linux_asan",
            "description": "debug with asan",
            "inherits": "linux_default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "USE_ASAN": true,
                "USE_UBSAN": true
            }
        },
        {
            "name": "linux_reldeb",
            "description": "release with debug and fortified",
            "inherits": "linux_default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "USE_FORTIFY":true,
                "USE_SAFESTACK": true
            }
        },
        {
            "name": "linux_fast",
            "description": "release with debug and fortified",
            "inherits": "linux_default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "USE_LTO":true
            }
        },
        {
            "name": "msvc_default",
            "description": "Default build for windows",
            "inherits": "default",
            "generator": "Ninja",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            }
        },
        {
            "name": "msvc_asan",
            "description": "debug with asan",
            "inherits": "msvc_default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "USE_ASAN": true
            }
        },
        {
            "name": "msvc_reldeb_static",
            "description": "Default build for windows",
            "inherits": "msvc_default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "FORCE_STATIC_VCRT": true,
                "STATIC_BUILD": true,
                "USE_LTO": true
            }
        }
    ],
    "buildPresets": [],
    "testPresets": []
}